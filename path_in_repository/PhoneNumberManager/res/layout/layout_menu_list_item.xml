<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="?menulistitem"
    android:layout_width="fill_parent"
    android:layout_height="50dip"
    android:clickable="true"
    >

    <TextView
        android:id="@+id/menuText"
        style="?menulistitem_menuName"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent" />

    <ImageView
        android:id="@+id/moreImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="60.0dip"
        android:contentDescription="null"
        android:src="@drawable/menu_more_details" />

    <TextView
        android:id="@+id/selectItem"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_marginRight="5.0dip"
        android:layout_toLeftOf="@id/moreImage"
        android:textColor="#ffe5e1d5" />

</RelativeLayout>